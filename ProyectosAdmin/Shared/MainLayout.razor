@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="background-color:#F57C00" Dense="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Style="font-weight:300;">Sistema de Gestion de Proyectos</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/gmarroyo261194/ProyectosAdmin/" Target="_blank" />
        <MudIconButton Icon="@Icons.Material.Outlined.Settings" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Style="background-color:#F57C00" Dense="false" >
        <div class="d-flex align-center justify-start gap-1">
             <MudImage ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.Contain" Fluid="true" Src="/images/share-svgrepo-com.svg" Width="32" Height="32"/>
                <strong>S.G.P.</strong>
        </div>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-2 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}